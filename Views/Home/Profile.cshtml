@{
    ViewBag.Title = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Profile Page</h1>
<form asp-controller="Home" asp-action="GetDetails" method="post">
    <table class = "table table-bordered table-striped">
        <tr>
            <td>Name :</td>
            <td><input name="txtName" type="text" required=true/></td>
        </tr>
        <tr>
            <td>ID :</td>
            <td><input name="txtID" type="text" required=true/></td>
        </tr>
        <tr>
            <td>Address :</td>
            <td><input name="txtAddress" type="text" required=true/></td>
        </tr>
        <tr>
            <td>Email :</td>
            <td><input name="txtEmail" type="text" required=true/></td>
        </tr>
        <tr>
            <td colspan="2"><input id="Submit1" type="submit" value="submit" /></td>
        </tr>
    </table>
</form>
<br /><br />

<h2 style="font-style:italic; color:deeppink">@ViewBag.Result</h2>